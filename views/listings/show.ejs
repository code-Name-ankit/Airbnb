<% layout('/layouts/boilerplate.ejs') -%>

<div class="row">
  <div
    class="card listing-card mt-3 col-10 offset-1 show-card"
    style="padding: 1rem"
  >
    <b style="font-size: 2rem; font-weight: 500" class="mb-2">
      <%= listing.title %></b
    >

    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="show_img"
    />
    <div class="card-body" style="margin-bottom: 1.5rem">
      <p class="card-text mt-3 ms-3" style="font-size: 1.2rem">
        <i><b>Own By: <%= listing.owner.username %></b></i
        ><br />
        <%= listing.description %><br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %><br />
        <%= listing.location %><br />
        <%= listing.country %><br />
      </p>
    </div>

    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>

    <div class="btns mb-3">
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark col-md-1 offset-1 add-btn"
        >Edit</a
      >

      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
    <% } %>

    <!-- Form for adding a new comment -->
  </div>
  <div
    class="card mt-3 col-10 offset-1 show-car listing-card"
    style="padding: 1rem"
  >
    <h4 class="head_title">Leave a Review</h4>
    <form
      method="POST"
      action="/listings/<%= listing._id %>/reviews"
      class="needs-validation"
      novalidate
    >
      <!-- <div class="mb-3 mt-3">
        <label for="rating" class="form-label new_label">Rating</label>
        <input
          type="range"
          id="rating"
          name="review[rating]"
          min="1"
          max="5"
          class="form-range"
        />
      </div> -->

      <div class="mb-3 mt-3" >
        <label for="rating" class="form-label new_label">Rating</label>
        <fieldset class="starability-coinFlip">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="5"
            checked
            aria-label="No rating."
          />

          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label new_label">Comment</label>
        <textarea
          id="comment"
          name="review[comment]"
          rows="5"
          cols="100"
          type="text"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback offset-1">
          Please add some comments for review
        </div>
      </div>
      <button class="btn btn-dark mb-3 mt-3 offset-1 add-btn">Submit</button>
    </form>
  </div>

  <!-- Show review card -->
  <% if(listing.reviews.length) { %>

  <div
    class="card mt-3 col-10 offset-1 show-car listing-card"
    style="padding: 1rem"
  >
    <h4 class="head_title">All Review</h4>
    <div class="row">
      <% for(let review of listing.reviews){ %>
      <div class="card col-5 mb-3 ms-3">
        <div class="card-body">
          <div class="date_show">
            <h5 class="card-title ms-1">@<%= review.author.username %></h5>
            <h6 class="card-title">
              <%= review.createdAt.toString().split(" ").slice(1,4).join(" ") %>
            </h6>
          </div>

          <p
            class="starability-result card-text" 
            data-rating="<%= review.rating %>"
          ></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <% if (currUser && review.author._id.equals(currUser._id)) { %>
        <div class="review_btn" style="display: flex">
          <a
            href="/listings/<%= listing._id %>/reviews/<%= review._id %>/edit"
            class="btn btn-dark mb-3 offset-1 add-btn"
            >Edit</a
          >
          <form
            class="mb-3"
            method="POST"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          >
            <button class="btn btn-dark offset-5">Delete</button>
          </form>
        </div>
        <% } %>
      </div>

      <% } %>
    </div>
  </div>
  <% } %>
</div>
